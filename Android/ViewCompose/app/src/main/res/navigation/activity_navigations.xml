<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_navigations"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.viewcompose.MainActivity"
        android:label="MainActivity" />
    <activity
        android:id="@+id/activity2"
        android:name="com.example.viewcompose.Activity2"
        android:label="activity_2"
        tools:layout="@layout/activity_2" />
    <action
        android:id="@+id/activity_1_to_activity_2"
        app:destination="@id/activity2"
        app:launchSingleTop="true" />
</navigation>